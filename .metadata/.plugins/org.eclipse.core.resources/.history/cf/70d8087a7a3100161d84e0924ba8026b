package print;

import java.util.Scanner;

public class Stairs {

	public static void main(String[] args) {
	   Scanner s=new Scanner(System.in);
	   int n=s.nextInt();
	   int x=n-1;
       for (int i=0;i<n;i++)
       {
    	   for (int j=0;j<n;j++)
    	   {
    	   if(i<x)
    	   {
    		   System.out.println(" ");
    	   }
    	   else
    	   {
    		   System.out.println("#");
    	   }
    	   }
    	   x--;
       }
	}

}
